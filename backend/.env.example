# Database
DATABASE_URL="mysql://USER:PASSWORD@localhost:3306/dulce_tentacion"

# Server
PORT=3000
HOST=0.0.0.0

# JWT
JWT_SECRET="replace-with-secure-access-secret"
JWT_REFRESH_SECRET="replace-with-secure-refresh-secret"
